
<%= form_for(@brand) do |f| %>

    <div class="field">
      <%= f.label :name  %><br>
      <%= f.text_field :name, :style => "width:15%;" %>
    </div>
    
    <div class="field">
      <%= f.select :product_id,  Product.all.collect { |p| [ p.name, p.id ] } %>
    </div>
    <div class="field">
      <%= f.select :product_id, Product.all.collect { |p| [ p.title, p.id ] } %>
    </div>

    <div class="field">
      <%= f.select :product_id, Product.all.collect { |p| [ p.description, p.id ] } %>
    </div>

    <div class="field">
      <%= f.select :product_id, Product.all.collect { |p| [ p.price, p.id ] } %>
    </div>
    
    <div class="field">
      <%= f.select :category_id, Category.all.collect { |p| [ p.name, p.id ] } %>
    </div>
      
    <div class="actions">
      <%= f.submit :class => "btn btn-warning btn-mini"%>
    </div>
    
    <% end %>
</body>
</head>
